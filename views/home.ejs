<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>
  <title>Quote Finder</title>
</head>

<body class="text-center">

  <h1 class="bg-danger p-4 text-white">Quote Finder</h1>
  <br />

  <div class="container">

    <!-- Keyword Search -->
    <div class="mb-4">
      <form action="quoteFinder">
        <h5>Search by Keyword</h5>
        <input name="keyword" type="search" id="keywordInput" class="form-control w-50 mx-auto" placeholder="Enter keyword..." />
        <p id="keywordError" class="text-danger mt-1" style="display: none;"></p>
        <button id="searchKeyword" type="submit" class="btn btn-primary mt-2">Search by Keyword</button>
      </form>
    </div>

    <!-- Author Search -->
    <div class="mb-4">
      <form action="/searchAuthor">
        <h5>Search by Author</h5>
        <select name="author" class="form-select w-50 mx-auto">
          <% for (let author of authors) { %>
            <option value="<%= author.authorId %>">
              <%= author.firstName %> <%= author.lastName %>
            </option>
          <% } %>
        </select>
        <button class="btn btn-primary mt-2">Search</button>
      </form>
    </div>

    <!-- Category Search -->
    <div class="mb-4">
      <form action="/searchCategory">
        <h5>Search by Category</h5>
        <select name="category" class="form-select w-50 mx-auto">
          <% for (let category of categories) { %>
            <option><%= category.category %></option>
          <% } %>
        </select>
        <button class="btn btn-primary mt-2">Search</button>
      </form>
    </div>

    <!-- Likes Search -->
    <div class="mb-4">
      <form action="/searchLikes">
        <h5>Search by Likes</h5>
        <input name="likes" type="number" class="form-control w-50 mx-auto" placeholder="Enter number of likes" />
        <button class="btn btn-primary mt-2">Search</button>
      </form>
    </div>

  </div>

  <script>
    const form = document.querySelector('form[action="quoteFinder"]');
    const input = document.getElementById('keywordInput');
    const errorMsg = document.getElementById('keywordError');

    form.addEventListener('submit', function (event) {
      const value = input.value.trim();

      if (value.length < 3) {
        event.preventDefault();
        errorMsg.textContent = "Please enter at least 3 characters.";
        errorMsg.style.display = "block";
      } else {
        errorMsg.textContent = "";
        errorMsg.style.display = "none";
      }
    });

  </script>
</body>

</html>
